  <div class="item">
          <div>Avatar URL</div>
             <div>
                
                 <input type="url" 
                   name="avatar_url" 
                   id="" placeholder="http://"
                   value="{{member.avatar_url}}"
                 >
             </div>
        </div>

        <div class="item">
          <div>Nome</div>
                <div>
                      <input type="text" 
                      name="name" 
                      placeholder="Nome do Membro"
                      value="{{member.name}}"
                      >

                </div>
        </div>

        <div class="item">
          <div>Email</div>
                <div>
                      <input type="email" 
                      name="email" 
                      placeholder="Informe seu email"
                      value="{{member.email}}"
                      >

                </div>
        </div>


         <div class="item">
            <div>Data de nascimento</div>
               <input type="date"
                name="birth"
                 id=""
                value="{{member.birth}}"
               >
        </div>


         <div class="item">
          <div>Sexo</div>
          <div>
                <span><input type="radio" name="gender" id="" value="M"  
                           
                            {% if member.gender == 'M' %} {# Verificação  #}
                                checked
                            {% endif %} > Masculino
                </span>
               
               
                <span><input type="radio" name="gender" id="" value="F"
                              
                               {% if member.gender == 'F' %}
                                 checked
                               {% endif %} > Feminino
                </span>
          </div>
        </div>

           <div class="item">
            <div>Tipo Sanguíneo</div>
               <div>
                  <select name="blood" >
                     <option value="A1"
                         {% if member.blood =="A1" %} selected {%endif%}>
                           A+
                      </option>
                     <option value="A0"
                         {% if member.blood =="A0" %} selected {%endif%}>
                           A-
                      </option>
                     <option value="B1"
                         {% if member.blood ==" B1" %} selected {%endif%}>
                           B+
                      </option>
                     <option value="B0"
                         {% if member.blood =="B0" %} selected {%endif%}>
                           B-
                      </option>
                     <option value="A0B1"
                         {% if member.blood =="AB1" %} selected {%endif%}>
                           AB
                      +</option>
                     <option value="AB0"
                         {% if member.blood =="AB0" %} selected {%endif%}>
                           AB
                      -</option>
                     <option value="O1"
                         {% if member.blood =="O1" %} selected {%endif%}>
                           O+
                      </option>
                     <option value="O0"
                         {% if member.blood =="O0" %} selected {%endif%}>
                           O-
                      </option>
                  </select>
               </div>
        </div>

        <div class="item">
            <div>Peso (Kg)</div>
               <input type="number"
                name="weight"
                 id=""
                value="{{member.weight}}"
               >
        </div>

        <div class="item">
            <div>Altura (cm)</div>
               <input type="number"
                name="height"
                 id=""
                value="{{member.height}}"
               >
        </div>

        
        <button type="submit">Salvar</button>